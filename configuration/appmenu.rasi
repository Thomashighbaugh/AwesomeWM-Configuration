configuration {
    font:                           "Noto Sans 10";
    show-icons:                     true;
    icon-theme:                     "chhinamasta";
    display-drun:                   "ï† ";
    drun-display-format:            "{name}";
    threads:                        0;
    scroll-method:                  0;
    disable-history:                false;
    fullscreen:                     false;
    hide-scrollbar:                 true;
    sidebar-mode:                   false;
}

/* -- Light -- */
* {
    background:                     #23262Caa;
    background-alt:                 #555e70CC;
    background-ib:                  #313040aa;
    foreground:                     #e9e9ffcc;
    border:                         #e9e9ffcc;
    border-sel:                     #FF29a8ff;
    selected:                       #00CAFFFF;
    urgent:                         #FF29a8ff;
}



window {
    background-color:               @background;
    text-color:                     @foreground;
    border:                         1px;
    border-radius:                  30px;
    border-color:                   @border;
    height:                         50%;
    width:                          35%;
location: west;
    x-offset:                       30;
    y-offset:                       0;

}

prompt {
    enabled:                        true;
    padding:                        5px 12px 0px 4px;
    background-color:               @background-ib;
    text-color:                     @foreground;
    font:                           "agave Nerd Font Bold 12";
}


inputbar {
    background-color:               @background-ib;
    text-color:                     @foreground;
    expand:                         false;
    border:                         0px 0px 6px 0px;
    border-radius:                  30px;
    border-color:                   @border;
    margin:                         5px;
    padding:                        10px;
    position:                       center;
}

entry {
    background-color:               @background-ib;
    text-color:                     @foreground;
    placeholder-color:              @foreground;
    expand:                         false;
    horizontal-align:               0.5;
    vertical-align:                 0.8;
    placeholder:                    "Search System";
    blink:                          true;
        font:                           "agave Nerd Font Bold 12";

}

case-indicator {
    background-color:               @background-ib;
    text-color:                     @foreground;
    spacing:                        0;
}


listview {
    background-color:               @background;
    columns:                        4;
    spacing:                        4px;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @background;
    children:                       [ inputbar, listview ];
    spacing:                        5px;
    padding:                        8px 15px 8px 15px;

}

element {
    background-color:               @background;
    text-color:                     @foreground;
    orientation:                    vertical;
    border-radius:                  0px;
    margin:                         0px 5px 0px 5px;
    padding:                        10px 0px 10px 0px;
}

element-icon {
    size:                           88px;
    border:                         0px;
}

element-text {
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         5px 5px 0px 5px;
   font:                           "agave Nerd Font Bold 12";

}

element normal.urgent,
element alternate.urgent {
    background-color:               @urgent;
    text-color:                     @foreground;
    border-radius:                  9px;
}

element normal.active,
element alternate.active {
    background-color:               @background-alt;
    text-color:                     @foreground;
}

element selected {
    background-color:               @selected;
    text-color:                     @foreground;
    border:                         0px 0px 5px 0px;
    border-radius:                  4px;
    border-color:                   @border-sel;
}

element selected.urgent {
    background-color:               @urgent;
    text-color:                     @foreground;
}

element selected.active {
    background-color:               @background-alt;
    color:                          @foreground;
}
