configuration {
	font:							"Encode Sans SemiExpanded Black 11";
    show-icons:                     true;
	icon-theme: 					"chhinamasta";
    display-drun: 					"ï€‚";
    drun-display-format:            "{name}";
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;

}

* {
    background:                     #17191ebb;
    background-alt:              	#17191e77;
    background-bar:                 #17191e77;
    foreground:                     #8b9cbe;
    accent:			            	#0badff;
    border:		               		#8b9cbe;
    selected:               		#f4f4f7;
}



window {
    transparency:                   "real";
    background-color:               @background;
    text-color:                     @foreground;
	border:							0px;
	border-color:					@border;
    border-radius:                  20px;
    border:                         0 10px 0 0;
	width:							12%;
    height:                         98%;
    location:                       west;
    x-offset:                       0;
    y-offset:                       0;
}

prompt {
    enabled: 						true;
	padding: 						-0.25% -0.75% 0% -0.25%;
	background-color: 				@background-alt;
	text-color: 					@foreground;
	font:							"Encode Sans SemiExpanded Black 10";
}

entry {
    background-color:               @background;
    text-color:                     @foreground;
    placeholder-color:              @foreground;
    border-radius:                  25px;
	padding: 						-0.25% -0.75% 0% -0.25%;

    horizontal-align:               0.25;
    placeholder:                    "Search Applications";
    padding:                        -0.10% 0% 0% 0%;
    blink:                          true;
}

inputbar {
	children: 						[ entry ];
    background-color:               @background-bar;
    text-color:                     @foreground;
    expand:                         false;
    border-radius:                  25px;


}

listview {
    background-color:               @background-alt;
    columns:                        1;
    lines:	                        8;
    spacing:                        0%;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @background-alt;
	border:							0% 0% 0% 0%;
    border-radius:                  0% 0% 0% 0%;
	border-color:					@accent;
    children:                       [ inputbar, listview ];
    padding:                        2% ;
}

element {
    background-color:               @background-alt;
    text-color:                     @foreground;
    orientation:                    vertical;
    border-radius:                  0%;
    padding:                        1%;
}

element-icon {
    size:                           64px;
    border:                         0px;
}

element-text {
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         0.5% 0.5% -0.5% 0.5%;
}

element selected {
    background-color:               @selected;
    text-color:                     @foreground;
	border:							0% 0% 0.8% 0%;
    border-radius:                  25px;
    border-color:                  	@border;
}
