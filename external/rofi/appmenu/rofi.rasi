configuration {
    font:                           "ProFontIIx Nerd Font Mono Book 11";
    show-icons:                     true;
    icon-theme:                     "chhinamasta";
    display-drun:                   "ï† ";
    drun-display-format:            "{name}";
    threads:                        0;
    scroll-method:                  0;
    disable-history:                false;
    fullscreen:                     false;
    hide-scrollbar:                 false;
    sidebar-mode:                   true;
}

/* -- Light -- */
* {
    background:                     #17191e77;
    background-alt:                 #22262daa;
    background-ib:                  #2f303daa;
    foreground:                     #8b9cbecc;
    border:                         #8b9cbecc;
    border-sel:                     #0badffcc;
    selected:                       #0b0c0fcc;
    urgent:                         #FF29a8ff;
}



window {
    background-color:               @background;
    text-color:                     @foreground;
    border:                         1px;
    border-radius:                  0px;
    border-color:                   @border;
    height:                         95%;
    width:                          15%;
location: west;
    x-offset:                       5;
    y-offset:                       5;

}

prompt {
    enabled:                        true;
    padding:                        5px 11px 0px 4px;
    background-color:               @background-ib;
    text-color:                     @foreground;
    font:                           "ProFontIIx Nerd Font Mono Bold 11";
}


inputbar {
    background-color:               @background-ib;
    text-color:                     @foreground;
    expand:                         false;
    border:                         0px 0px 6px 0px;
    border-radius:                  30px;
    border-color:                   @border;
    margin:                         5px;
    padding:                        11px;
    position:                       center;
}

entry {
    background-color:               @background-ib;
    text-color:                     @foreground;
    placeholder-color:              @foreground;
    expand:                         false;
    horizontal-align:               0.5;
    vertical-align:                 0.8;
    placeholder:                    "Application Search...";
    blink:                          true;
        font:                       "ProFontIIx Nerd Font Mono  Bold 11";

}

case-indicator {
    background-color:               @background-ib;
    text-color:                     @foreground;
    spacing:                        0;
}


listview {
    background-color:               @background;
    columns:                        1;
    spacing:                        1px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @background;
    children:                       [ inputbar, listview ];
    spacing:                        5px;
    padding:                        13px 16px 13px 16px;

}

element {
    background-color:               @background;
    text-color:                     @foreground;
    orientation:                    horizontal;
    border-radius:                  0px;
    margin:                         0px 1px 0px 1px;
    padding:                        2px 0px 2px 0px;
}

element-icon {
    size:                           48px;
    border:                         0px;
}

element-text {
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         1px 1px 0px 1px;
   font:                           "ProFontIIx Nerd Font Mono  Bold 13";

}

element normal.urgent,
element alternate.urgent {
    background-color:               @urgent;
    text-color:                     @foreground;
    border-radius:                  9px;
}

element normal.active,
element alternate.active {
    background-color:               @background-alt;
    text-color:                     @foreground;
}

element selected {
    background-color:               @selected;
    text-color:                     @foreground;
    border:                         0px 0px 5px 0px;
    border-radius:                  9px;
    border-color:                   @border-sel;
}

element selected.urgent {
    background-color:               @urgent;
    text-color:                     @foreground;
}

element selected.active {
    background-color:               @background-alt;
    color:                          @foreground;
}
