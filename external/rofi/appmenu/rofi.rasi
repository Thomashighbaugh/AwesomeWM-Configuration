
configuration {
    drun-display-format: "{icon} {name}";
    display-drun: "Apps";
    show-icons: true;
    icon-theme: "chhinamasta";
    location: 1;
    yoffset: 0;
    xoffset: 0;
    fake-transparency: true;
    hide-scrollbar: true;
    fullscreen: false;
    show-icons: true;
    terminal: "kitty";
    sidebar-mode: true;
}

/* colors */
* {
    red: #ff59b8cc;
    blue: #00caffcc;
    green: #76dcddcc;
    purple: #6c71c4cc;
    white: #e9e9ffcc;
}

   * {
       bg:  #0e121acc;
       bg-sel: #2f303dcc;
       fg: #e9e9ffcc;
   }



* {
    background-color: @bg;
    font: "agave Nerd Font Regular 22";
}

window {
    height: 100%;
    width: 15%;
    transparency: "real";
}

mainbox {
    children: [ inputbar, listview ];
    padding: 0% 0% 0% 0%;
    background-color: @bg;
    border: 5;
    border-radius: 0;
    border-color: @bg;
}

listview {
    columns: 1;
    padding: 5;
    spacing: 5;
    border-radius: 0;
}

element {
    border: 0;
    text-color: @fg;
    orientation: horizontal;
    padding: 12;
    border-radius: 0;
}

element selected {
    background-color: @bg-sel;
    border-color: @bg;
    text-color: @fg;
}

inputbar {
    children: [entry];
    
    background-color: @bg;
    border: 0 0 1 0;
    border-color: #404758;
    border-radius: 0;
    padding: 12;
    text-color:@fg;
}

prompt {
    enabled: true;
}

entry {
    text-color: @white;
    }